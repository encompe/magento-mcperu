<config>
    <modules>
        <Strobe_McPeru>
            <active>true</active>
            <codePool>local</codePool>
            <depends>
                <Mage_Payment/>
            </depends>
        </Strobe_McPeru>
    </modules>
	<frontend>
        <routers>
            <mcperu>
                <use>standard</use>
                <args>
                    <module>Strobe_McPeru</module>
                    <frontName>mcperu</frontName>
                </args>
            </mcperu>
        </routers>
        <translate>
            <modules>
                <Strobe_McPeru>
                    <files>
                        <default>XMLFile.xml</default>
                    </files>
                </Strobe_McPeru>
            </modules>
        </translate>
        <layout>
            <updates>
                <mcperu>
                    <file>mcperu.xml</file>
                </mcperu>
            </updates>
        </layout>
    </frontend>
</config>
